<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mdmakeup.controllers.LoginController">
    
    
    <ImageView fx:id="backgroundImage" fitHeight="662.0" fitWidth="393.0" opacity="1.0">
        <image>
            <Image url="@../images/PM.jpeg" />
        </image>
    </ImageView>
    

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.8); -fx-padding: 40; -fx-background-radius: 10;">
     
     
        <ImageView fitHeight="149" fitWidth="149" opacity="1.0">
            <image>
                <Image url="@../images/logo.png" />
            </image>
        </ImageView>
        
        
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Welcome to M D makeup Store" />
        
        
        <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 20;">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #333333;" text="E-mail" />
            <TextField fx:id="emailField" promptText="Ingresa tu email" style="-fx-pref-width: 250; -fx-opacity: 1.0;" />
            
            <Label style="-fx-font-weight: bold; -fx-text-fill: #333333;" text="Password" />
            <PasswordField fx:id="passwordField" promptText="Ingresa tu contraseÃ±a" style="-fx-pref-width: 250; -fx-opacity: 1.0;" />
        </VBox>
        
    
        <Button fx:id="loginBtn" onAction="#handleLogin" style="-fx-background-color: #d63384; -fx-text-fill: white; -fx-pref-width: 250; -fx-opacity: 1.0;" text="Log in" />

        
       
        <HBox alignment="CENTER" spacing="5">
            <Label style="-fx-text-fill: #333333;" text="don't have an account?" />
            <Button fx:id="signupBtn" onAction="#handleSignup" style="-fx-background-color: transparent; -fx-text-fill: #d63384; -fx-padding: 0; -fx-underline: true; -fx-opacity: 1.0;" text="sign up" />
        </HBox>
    </VBox>
</StackPane>
