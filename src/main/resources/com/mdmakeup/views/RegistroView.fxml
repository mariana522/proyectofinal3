<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.mdmakeup.controllers.RegistroController">

    <ImageView fitHeight="662.0" fitWidth="393.0" preserveRatio="false">
        <image>
            <Image url="@../images/PM.jpeg" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.8); -fx-padding: 40; -fx-background-radius: 10;">
        
        <ImageView fitWidth="149" fitHeight="149">
            <image>
                <Image url="@../images/logo.png" />
            </image>
        </ImageView>
        
        <Label text="Welcome to M D makeup Store" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 20;">
            <Label text="Name" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtNombre" promptText="Nombre completo" style="-fx-pref-width: 250;"/>
            
            <Label text="E-mail" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtEmail" promptText="Correo electrónico" style="-fx-pref-width: 250;"/>
            
            <Label text="Password" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="txtContraseña" promptText="Contraseña" style="-fx-pref-width: 250;"/>
        </VBox>

        <Button fx:id="btnRegistrar" text="Registrarse" onAction="#registrarUsuario"
                style="-fx-background-color: #d63384; -fx-text-fill: white; -fx-pref-width: 250;"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="¿Ya tienes una cuenta?"/>
            <Button fx:id="btnLogin" text="Iniciar Sesión" onAction="#cargarVistaLogin"
                    style="-fx-background-color: transparent; -fx-text-fill: #d63384; -fx-padding: 0; -fx-underline: true;"/>
        </HBox>
    </VBox>
</StackPane>
